<main class="box-container box-container--center">
  <section class="signin box box--center">
    <h2 class="signin-title">Log in</h2>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <section class="signin-form">
      <div class="field signin-field signin-field--text">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field signin-field signin-field--text">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="actions field signin-field">
        <% if devise_mapping.rememberable? -%>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "signin-remember-me" %>
        </div>
        <% end -%>
        <%= f.submit "Sign In", class: "signin-button" %>
      </div>
    </section>
    <% end %>


    <% # render "devise/shared/links" %>
  </section>

</main>
