<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>Prompt</th>
      <th>Difficulty</th>
      <th>Grade Level</th>
      <th>Subjects</th>
      <th>Tags</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.prompt.class.type %></td>
        <td><%= question.prompt.to_one_liner %></td>
        <td><%= question.difficulty %></td>
        <td><%= question.grade_level %></td>
        <td><%= question.subject_list.join(", ") %></td>
        <td><%= question.tag_list.join(", ") %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag new_question_path, method: :get do %>
  <%= select_tag :prompt_type, options_for_select(Prompt.accepted_types), prompt: "Select New Question Type" %>
  <%= submit_tag "New Question", name: nil %>
<% end %>
